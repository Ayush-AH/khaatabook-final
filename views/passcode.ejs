<%- include("./partials/header.ejs") %>
<div class="w-full h-[90vh] flex items-center justify-center">
    <div class="flex flex-col w-[20%]">
        <h1 class="font-semibold text-lg mb-5 capitalize">passcode required</h1>
        <form action="/hisab/<%= hisabid %>/verify" method="post">
            <input class="block border border-zinc-300 rounded-md w-full p-2 mb-2 outline-none bg-zinc-200/30" type="password" name="passcode" placeholder="Passcode">
            <% if(error.length > 0){ %>
                <h5 class="text-xm text-red-500  mb-1 capitalize"><%= error[0] %></h5>
            <% } %>
            <input class="block p-2 px-4 text-white bg-blue-500 rounded-md w-full mt-4" type="submit" value="View Hisab">
        </form>
    </div>
</div>
<%- include("./partials/footer.ejs") %>

