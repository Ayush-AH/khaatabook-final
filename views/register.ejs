<%- include("./partials/header.ejs") %>

<div class="w-full h-[90vh] flex items-center justify-center">
    <div class="flex flex-col w-[20%]">
        <h1 class="font-semibold text-lg mb-5 capitalize">Register account</h1>
        <form action="/register" method="post">
            <input class="block border border-zinc-300 rounded-md w-full p-2 mb-2 outline-none bg-zinc-200/30" type="text" name="username" placeholder="username">
            <input class="block border border-zinc-300 rounded-md w-full p-2 mb-2 outline-none bg-zinc-200/30" type="email" name="email" placeholder="email">
            <input class="block border border-zinc-300 rounded-md w-full p-2 mb-2 outline-none bg-zinc-200/30" type="password" name="password" placeholder="password">
            <input class="block p-2 px-4 text-white bg-blue-500 rounded-md w-full mt-4" type="submit" value="Log In">
        </form>
        <a href="/" class="text-blue-500 text-sm mt-2">Already have account ? Log In</a>
    </div>
</div>

<%- include("./partials/footer.ejs") %>

